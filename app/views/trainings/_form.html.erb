<div style="margin-left:30px;">
  <%= form_for @training,remote: true  do |f| %>
      <div class="form-group">
        <%= f.text_field :name,:class => "form-control",:placeholder=>"Enter name"%>
      </div>
      <div class="form-group">
        <%= f.text_field :certification,:class => "form-control",:placeholder=>"Add the type of certification you want?"%>
      </div>
      <div class="form-group">
        <%= f.text_field :number_of_day,:class => "form-control",:placeholder=>"Enter duration"%>
      </div>
      <div class="form-group">
        <%if params[:action] == 'edit'%>
            <%= f.submit "Update Training",:class => "btn btn-primary pull-left"%>
        <% else %>
            <%= f.submit "Create Training",:class => "btn btn-primary pull-left"%>
        <% end %>
      </div><br><br>
  <% end %>
  <%= link_to "Back",trainings_path ,:class=>"btn btn-success"%>
</div>